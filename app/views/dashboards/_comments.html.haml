#comments.page
  .page-content

    #disqus_thread
    :javascript
      var disqus_shortname = 'pigstravaganza'; // required: replace example with your forum shortname
      var disqus_identifier = 'pigstravaganza_2011_comments';
      var disqus_url = 'http://2011.pigstravaganza.com';
      var disqus_developer = 0;

      /* * * DON'T EDIT BELOW THIS LINE * * */
      (function() {
          var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
          dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
          (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      })();
    %noscript
      Please enable JavaScript to view the
      = link_to "comments powered by Disqus.", "http://disqus.com/?ref_noscript"

    = link_to "http://disqus.com", :class => "dsq-brlink" do
      blog comments powered by
      %span.logo-disqus Disqus
